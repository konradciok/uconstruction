# Stripe Configuration (SECRETS - keep private)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Public configuration (can be in code or NEXT_PUBLIC_ env vars)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Workshop Configuration
WORKSHOP_CAPACITY=8
WORKSHOP_DURATION=120
WORKSHOP_LOCATION=Güímar, Tenerife
WORKSHOP_TIME=11:00 AM

# Shopify Sync Configuration (SECRETS - keep private)
# Your myshopify domain without protocol, e.g., mystore.myshopify.com
MYSHOPIFY_DOMAIN=
# Admin API access token for the custom app (Private Admin API access)
SHOPIFY_ACCESS_TOKEN=
# Pinned Admin API version for all requests (Phase 0 requirement)
SHOPIFY_API_VERSION=2025-07
# Webhook verification secret for Shopify webhooks
SHOPIFY_WEBHOOK_SECRET=

# Database Configuration
# SQLite database path for local development
DATABASE_URL=file:./prisma/dev.db
